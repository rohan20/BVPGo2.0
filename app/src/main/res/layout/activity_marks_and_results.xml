<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NavigationDrawer.MarksAndResultsActivity">

    <TextView
        android:id="@+id/chooseSemesterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:text="Choose semester"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <Spinner
        android:id="@+id/chooseSemesterSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chooseSemesterText"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_below="@id/chooseSemesterSpinner"
        android:layout_margin="15dp"
        android:id="@+id/lists"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/subjectsList"
            android:layout_width="0dp"
            android:layout_height="260dp"
            android:layout_margin="15dp"
            android:layout_weight="1" />

        <ListView
            android:id="@+id/marksList"
            android:layout_width="0dp"
            android:layout_height="260dp"
            android:layout_margin="15dp"
            android:layout_weight="1" />


    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lists"
        android:layout_margin="15dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:id="@+id/result"
        android:textSize="35sp"
        android:textStyle="bold" />


</RelativeLayout>
